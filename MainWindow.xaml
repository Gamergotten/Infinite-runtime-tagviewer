<Window x:Class="Assembly69.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Infinite Runtime Tagviewer" Height="650" Width="1100">
    <Window.Resources>
        <ScaleTransform 
            x:Key="windowScaleTransform" 
            ScaleX="1" 
            ScaleY="1" />
    </Window.Resources>
    
    <Grid  LayoutTransform="{StaticResource windowScaleTransform}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <GridSplitter Grid.Column="1" 
              HorizontalAlignment="Stretch" 
              VerticalAlignment="Stretch"
              Background="#ccc" 
              ShowsPreview="true" />
        
        <!-- Tags Grid -->
        <Grid Grid.Column="2" Margin="5,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

			<DockingManager x:Name="dockManager"
                    Grid.Row="0"
                    AllowMixedOrientation="True"
                    AutoWindowSizeWhenOpened="True"
                    DocumentClosing="DockManager_DocumentClosing"
                    Background="White">

				<DockingManager.Theme>
                    <GenericTheme />
                </DockingManager.Theme>
                
                <DockingManager.DocumentHeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DataTemplate>
                </DockingManager.DocumentHeaderTemplate>
                
                <LayoutRoot x:Name="dockLayoutRoot">
					<LayoutPanel x:Name="dockLayoutPanel">
                        <LayoutDocumentPaneGroup>
                            <LayoutDocumentPane x:Name="dockLayoutDocPane" />
                        </LayoutDocumentPaneGroup>
                    </LayoutPanel>
                </LayoutRoot>
            </DockingManager>

            <Grid Grid.Row="1" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button     Content="Poke" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="BtnPokeChanges_Click"/>
                <TextBlock  x:Name="poke_text" Grid.Column="1" HorizontalAlignment="Left" Text=". . ." VerticalAlignment="Center" Margin="5,0,0,0"/>

                <TextBlock  x:Name="change_text" Grid.Column="2" HorizontalAlignment="Right" Text="0 changes queued" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Button     Grid.Column="3" Content="Clear" HorizontalAlignment="Stretch" Click="BtnClearQueue_Click" />
                <Button     Grid.Column="4" Content="Show/Hide Queue" HorizontalAlignment="Stretch" Click="BtnShowHideQueue_Click" Margin="10,0,0,0"   />
            </Grid>

            <StackPanel x:Name="changes_panel" Grid.Row="3" Grid.ColumnSpan="5" Margin="0,10,0,0" Visibility="Collapsed" />
        </Grid>
        <!-- > Tags Grid -->

        <Grid Grid.Column="0" Margin="0,0,2,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="20"/>
                <RowDefinition />
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <!-- > Search Box -->
            <Grid Grid.RowSpan="2" Background="White" Margin="0,1,0,2">
                <Grid VerticalAlignment="Center" Margin="10,0,15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label   Content="Search"   Grid.Column="0" Width="auto" Margin="0,0,10,0" />
                    <TextBox x:Name="Searchbox" Grid.Column="1" TextChanged="Searchbox_TextChanged" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <!-- < Search Box -->

            <TreeView x:Name="TagsTree" Grid.Row="2" >
                <TreeViewItem Header="Hook and load to get started!" />
                <TreeViewItem Header="reload the tags whenever the map changes" />
            </TreeView>
            <!-- < #TagsTree -->

            <Grid Grid.Row="3" Grid.ColumnSpan="1" Margin="5,5,5,5" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Hook" Grid.Column="0" Click="BtnHook_Click" Padding="4,4,4,4" />
                <TextBlock x:Name="hook_text" Text="Not hooked" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" />

                <Button Content="Load" Grid.Column="2" Click="BtnLoadTags_Click" Padding="4,4,4,4"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
