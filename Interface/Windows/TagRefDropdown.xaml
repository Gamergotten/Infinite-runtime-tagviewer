<Window x:Class="Assembly69.Interface.Windows.TagRefDropdown"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="tagref_dropdown" Height="450" Width="400" Deactivated="Window_Deactivated">
    <Grid Background="LightGray" MouseDown="Grid_MouseDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.ColumnSpan="3">
            <TreeView x:Name="tag_select_panel" />
        </Border>
        
        <TextBlock HorizontalAlignment="Right" Text="Search" VerticalAlignment="Center" Margin="10,0,6,0"/>
        <TextBox x:Name="search_block" Grid.Column="1" HorizontalAlignment="Stretch" Text="" VerticalAlignment="Center" TextChanged="Searchbox_TextChanged"/>

    </Grid>
</Window>
