<UserControl x:Class="InfiniteRuntimeTagViewer.Interface.Controls.ProcessSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfiniteRuntimeTagViewer.Interface.Controls"
             mc:Ignorable="d" d:DesignWidth="150" Height="24">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <ComboBox x:Name="cbxSelector" SelectedIndex="0" DropDownOpened="cbxSelector_DropDownOpened" SelectionChanged="cbxSelector_SelectionChanged">
            <ComboBoxItem Content="Hook any Halo Infinite process.">
                <ComboBoxItem.ToolTip>
                    <TextBlock Foreground="Black">Automatically find any halo infinite process and hook it.</TextBlock>
                </ComboBoxItem.ToolTip>
            </ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
